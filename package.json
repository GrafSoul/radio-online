{
  "name": "radio-online",
  "productName": "Radion",
  "description": "Applications for listening to the broadcast of radio stations. Made using - Electron.js, React.js.",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GrafSoul/radio-online.git"
  },
  "author": "Dmitriy Zatulovskiy <grafsoul@gmail.com> (https://networkroom.ru)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GrafSoul/radio-online/issues"
  },
  "private": true,
  "dependencies": {
    "electron-devtools-installer": "^3.1.1",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.3.0",
    "electron-reload": "^1.5.0",
    "electron-updater": "^4.3.5",
    "electron-window-state": "^5.0.3",
    "file-saver": "^2.0.2",
    "node-notifier": "^8.0.0",
    "node-sass": "^4.14.1",
    "react": "^17.0.1",
    "react-custom-scrollbars": "^4.2.1",
    "react-dom": "^17.0.1",
    "react-player": "^2.6.2",
    "react-scripts": "^4.0.0",
    "reactstrap": "^8.7.0",
    "uuid": "^8.3.1"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && yarn electron-build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "prettier": "prettier --single-quote --write \"./src/**/*.js\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "electron-debug": "^3.1.0",
    "prettier": "^2.1.2",
    "wait-on": "^5.2.0"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.example.reactron",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "publish": {
      "provider": "github"
    }
  }
}
